node {
    on_commit to: develop, {
        maven.runs("test",["clean"],properties:["skipTests":"true"])
    }
    
    on_pull_request to: master, {
        maven.runs("build",["clean package"],properties:["skipTests":"true"])
        checkmarx.run("java")
        whitesource.run("maven")
    }
        
    on_merge to: main, from: master, {
        maven.runs("deploy",["clean package"],properties:["skipTests":"true"])
    }
}
